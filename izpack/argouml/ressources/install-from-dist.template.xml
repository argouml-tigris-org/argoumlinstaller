<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    The ArgoUML-AndroMDA installation file.
    This file is regenerated by the Ant target make-install to take into account the
    location of the ArgoUML binary installlation.
    L.Maitre
-->

<installation version="1.0">

    <!-- 
        The info section.
    -->
    <info>
        <appname>ArgoUML</appname>
        <appversion>@ARGO_VERSION@</appversion>
        <appsubpath>argouml</appsubpath>
        <authors>
            <author name="ArgoUML development team" email="dev@argouml.tigris.org"/>
        </authors>
        <url>@PROJECT_URL@</url>
        <webdir>@PROJECT_WEBDIR@</webdir>
        <javaversion>1.4</javaversion>
    </info>

    <variables>
	<variable name="released-on" value="2006/01/08"/>
    </variables>

    <!-- 
        The gui preferences indication.
    -->
    <guiprefs width="640" height="480" resizable="no">
	<modifier key="useLabelIcons" value="no"/>
    </guiprefs>
    
    <!-- 
        The locale section.
    -->
    <locale>
        <langpack iso3="eng"/>
        <langpack iso3="fra"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="ressources/LICENSE.txt"/>
        <res id="InfoPanel.info" src="@ARGO_DIST@/README.txt"/>
        <res id="installer.langsel.img" src="@ARGO_DIST@/org/argouml/Images/Splash.png"/>
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>

    <!-- ArgoUML base pack.
    -->
    <packs>
    	<!-- base package with support files for other packages -->
        <pack name="ArgoUML" required="yes">
            <description>ArgoUML</description>
            <!-- ArgoUML -->
            <fileset dir="@ARGO_DIST@" targetdir="$INSTALL_PATH">
	            	<include name="*.*"/>	
	            	<exclude name="org/argouml/Images/Splash.png"/>
            </fileset>
            <executable targetfile="$INSTALL_PATH/argouml.sh" stage="never">
	            	<os family="unix"/>
    		        	<os family="mac"/>
            </executable>
         </pack>
         <!--@MODULES@-->
         <!--@DOCUMENTATION@-->
        <pack name="Documentation" required="no">
            <description>ArgoUML Documentation</description>
            <!-- ArgoUML Documentation -->
            <fileset dir="@ARGO_DIST@/doc" targetdir="$INSTALL_PATH/doc">
	            	<include name="*.*"/>	
            </fileset>
         </pack>         
    </packs>
    
</installation>
